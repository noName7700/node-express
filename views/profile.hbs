<h1>Профиль</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatar}}
            <img class="avatar" src="/{{user.avatar}}" alt="avatar-{{user.name}}">
        {{else}}
            <img class="avatar" src="https://spb-pochin.ru/wp-content/uploads/2023/08/placeholder.png" alt="Аватар">
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Ваш email: <strong>{{user.email}}</strong></p>
            <div class="input-field  s6">
                <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                <label for="name">Ваше имя:</label>
                <span class="helper-text" data-error="Имя не может быть пустым"></span>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Аватар</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input type="text" class="file-path validate">
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Изменить</button>
        </form>
    </div>
</div>